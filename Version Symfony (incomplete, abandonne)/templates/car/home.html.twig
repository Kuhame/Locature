{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="margin: 1%">Welcome to CarRent !</h1>
    <section class="articles">
    <div class="cars d-flex mx-auto justify-content-between flex-wrap" style="width: 100%">
    {% for voiture in voitures %}
        <div class="card" style="width: 45%; margin:1em auto">
            <img class="card-img-top" src="{{ voiture.photo  }}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{ voiture.modele | raw}}</h5>
                <p class="card-text">{{ voiture.caracteristiques | raw }}</p>
                {% if not app.user %}
                    <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#exampleModalCenter">
                        More...
                    </button>
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Log in</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    You have to log in first in order to access the details of this article.
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                                    <form action="{{ path('logIn') }}">
                                        <button type="submit" class="btn btn-dark">Log in</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                <a href="{{ path('show_car', {'id': voiture.id}) }}" class="btn btn-dark">More...</a>
                {% endif %}
            </div>
        </div>
    {% endfor %}
    </div>
    </section>
{% endblock %}