{% extends 'base.html.twig' %}

{% block body %}
        <h1>Log in</h1>
        <form action="{{ path('logIn') }}" method="post">
                <div class="form-group">
                        <label>Email</label>
                        <input placeholder="xyz@gmail.com" required name="_username" type="text" class="form-control">
                </div>
                <br>
                <div class="form-group">
                        <label>Password</label>
                        <input placeholder="password" required name="_password" type="password" class="form-control">
                </div>
                <br>
                <strong>You don't have an account ?<a href="{{ ('signIn') }}"> Sign In</a></strong>
                <div class="form-group">
                        <button type="submit" class="btn btn-dark">Log in</button>
                </div>
        </form>
{% endblock %}